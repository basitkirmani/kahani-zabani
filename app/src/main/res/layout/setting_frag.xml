                <!--                    android:padding="5dp"-->
                <!--                    android:text="@string/app_name"-->
                <!--                    android:textColor="#000"-->
                <!--                    android:textSize="12sp" />-->

                <!--                <SeekBar-->
                <!--                    android:id="@+id/font_bar"-->
